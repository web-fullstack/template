{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "000-xyz",
        "**/*.spec.ts"
    ]
}
